<% if @question.errors.present? %>
  $('form#q-edit-<%= @question.id %>').append('<%= j render "application/error_messages", target: @question %>');
<% else %>
  $('form#q-edit-<%= @question.id %>').hide();
  $('#q-title-<%= @question.id %>').html('<%= j @question.title %>');  
  $('#q-body-<%= @question.id %>').html('<%= j @question.body %>');
  $('#q-content-<%= @question.id %>').show();
<% end %>