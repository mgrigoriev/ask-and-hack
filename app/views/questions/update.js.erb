<% if @question.errors.present? %>
  $('form#edit-question-<%= @question.id %>').append('<%= j render "application/error_messages", target: @question %>');
<% else %>
  $('form#edit-question-<%= @question.id %>').hide();
  $('#question-title-<%= @question.id %>').html('<%= j @question.title %>');  
  $('#question-body-<%= @question.id %>').html('<%= j @question.body %>');
  $('#question-content-<%= @question.id %>').show();
<% end %>