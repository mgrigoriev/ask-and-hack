<% if @answer.errors.present? %>
  $('form#a-edit-<%= @answer.id %>').append('<%= j render "application/error_messages", target: @answer %>');
<% else %>
  $('form#a-edit-<%= @answer.id %>').hide();
  $('#a-text-<%= @answer.id %>').html('<%= j @answer.body %>');
  $('#a-content-<%= @answer.id %>').show();
<% end %>