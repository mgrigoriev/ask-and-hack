<% if @answer.errors.any? %>
$('.answer_errors').html('<%= j render partial: "shared/error_messages", locals: {target: @answer } %>');
<% else %>
$('.answers').append('<%= j render partial: "questions/answer", locals: { answer: @answer } %>');
$('.answer_errors').html('');
$('#answer_body').val('');
<% end %>